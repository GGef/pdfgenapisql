# Application
VITE_APP_NAME=CSV PDF Generator
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Generate PDFs from CSV data using customizable templates

# API Configuration
VITE_API_URL=http://localhost:3000
VITE_API_TIMEOUT=30000

# Feature Flags
VITE_ENABLE_AUTH=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_NOTIFICATIONS=true

# PDF Generation
VITE_MAX_PDF_SIZE=10485760
VITE_SUPPORTED_FORMATS=pdf,doc,docx,txt,html
VITE_MAX_BATCH_SIZE=100

# Storage
VITE_STORAGE_PREFIX=csv_pdf_generator
VITE_MAX_STORAGE_SIZE=104857600

# i18n
VITE_DEFAULT_LANGUAGE=en
VITE_SUPPORTED_LANGUAGES=en,fr,es

# Theme
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true